<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/history_type"
            android:layout_weight="4"
            android:layout_marginTop="22dp"
            android:src="@drawable/ic_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/history_name"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name_history" />
            <TextView
                android:id="@+id/history_email"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/history_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="adeniranopeyemi@gmail.com" />
            <TextView
                android:id="@+id/history_phone"
                android:textSize="11sp"
                android:layout_below="@id/history_email"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="+234545433454345" />
        </RelativeLayout>
        <TextView
            android:layout_weight="4"
            android:id="@+id/history_amount"
            android:layout_width="match_parent"
            android:text="@string/amount"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:fontFamily="@font/raleway_medium"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>